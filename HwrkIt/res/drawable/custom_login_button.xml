<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/primaryPressed"
                android:endColor="@color/primaryPressed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/primaryPressed" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/primaryFocused"
                android:endColor="@color/primaryFocused"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/primaryFocused" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/yellow"
               android:endColor="@color/yellow"
               android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/yellow" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>